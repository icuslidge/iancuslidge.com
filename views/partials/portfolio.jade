.span9.offset1.scorpio-margin
  each map in maps
    .blog.clearfix
      .span9.img-polaroid.blog-img
        a(href='portfolio/' + map.name)
          img(alt='content', src= map.banner)
        .marker
          i.icon-bookmark
      .span9.blog-content.scorpio-map-description
        .span2.blog-title
          .scorpio-map-description-left
            a(href='portfolio/' + map.name)
              h4= map.name
            ul.icons
              if map.leaguesPlayedIn
                li
                  if map.isInRotation
                    b Currently in rotation:
                  else
                    b Played in:
                li= map.leaguesPlayedIn
              li
                a(href= map.downloadLink)
                  i.icon-download
                  b Download
        .span6.scorpio-map-description-right
          p= map.description[0]
          a(href='portfolio/' + map.name)
            h5.read-more Read More...
